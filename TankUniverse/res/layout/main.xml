<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" android:padding="50dip">
    <EditText 
      android:layout_height="wrap_content" 
      android:id="@+id/edit_username"
      android:layout_width="match_parent" 
      android:hint="Username (letters and numbers only)"
      android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789" android:background="@drawable/name" android:textColorHint="#C000" android:padding="15dip">
    </EditText>
    <Button 
      android:text="Pick Color" 
      android:id="@+id/btn_pickColor" 
      android:layout_width="100dip" 
      android:layout_height="wrap_content"></Button>
    <Button 
      android:id="@+id/btn_host"
      android:layout_width="100dip" 
      android:layout_height="wrap_content"
      android:layout_marginTop="20dip" 
      android:text="Host"></Button>
    <Button 
      android:id="@+id/btn_join"
      android:layout_width="100dip" 
      android:layout_height="wrap_content" 
      android:text="Join"></Button>
    
</LinearLayout>